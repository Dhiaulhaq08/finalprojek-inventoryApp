<%- include('../layout/header.ejs') %>
<link href="bootstrap/css-tambahan/index.css" rel="stylesheet">
<%- include('../layout/navbar.ejs') %>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grafik Pengiriman</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">  
    <h1>Grafik Pengiriman Produk</h1>
    <canvas id="shipmentChart" width="800" height="400"></canvas>
    <br><br><br>
    <div class="container mt-5">
      <h1 class="mb-4">Shipment Report</h1>
     
      <!-- Table with Bootstrap styling -->
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead class="thead-dark">
            <tr>
              <th>Shipment ID</th>
              <th>Product Name</th>
              <th>Jumlah Kirim</th>
              <th>Tanggal Kirim</th>
              <th>Distributed To</th>
            </tr>
          </thead>
          <tbody>
            <% shipments.forEach(shipment => { %>
              <tr>
                <td><%= shipment.shipment_id %></td>
                <td><%= shipment.nama_produk %></td>
                <td><%= shipment.jumlah_kirim %></td>
                <td><%= shipment.tanggal_kirim %></td>
                <td><%= shipment.distributor_1 %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
   
    <script src="../bootstrap/js-tambahan/shipmentChart.js"></script>
    </main>
</body>

<%- include('../layout/footer.ejs') %>